<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_logo"
    android:padding="20dp"
    tools:context=".RentAccountActivity">

    <TextView
        android:id="@+id/rent_account_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rent_account_account_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="계좌번호"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rent_account_back_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="국민은행 937702 01 026734 독고건영"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/rent_account_account_number_tv"
        app:layout_constraintTop_toBottomOf="@id/rent_account_account_number_tv" />

    <TextView
        android:id="@+id/rent_account_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="300dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/rent_account_account_number_tv"
        app:layout_constraintTop_toBottomOf="@id/rent_account_account_number_tv" />

    <TextView
        android:id="@+id/rent_account_price_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원 입금해주세요."
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/rent_account_price_tv"
        app:layout_constraintStart_toEndOf="@id/rent_account_price_tv" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/phone_man"
        app:layout_constraintBottom_toBottomOf="@id/rent_account_highlight"
        app:layout_constraintStart_toEndOf="@id/rent_account_price_text_tv" />

    <View
        android:id="@+id/rent_account_highlight"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@id/rent_account_price_tv"
        app:layout_constraintTop_toBottomOf="@id/rent_account_price_text_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="[입금내역을 학복지 직원에게 보여주세요]"
        app:layout_constraintStart_toStartOf="@id/rent_account_price_tv"
        app:layout_constraintTop_toBottomOf="@id/rent_account_price_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>